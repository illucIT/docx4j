<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

  <parent>
	<groupId>org.docx4j</groupId>
	<artifactId>docx4j-parent</artifactId>
	<version>${revision}</version>
  </parent>
  
	<artifactId>docx4j-JAXB-MOXy</artifactId>
	<packaging>${packaging.type}</packaging>
	<name>docx4j-JAXB-MOXy</name>

	<description>
		config specifying that docx4j should use the EclipseLink MOXy (JAXB) runtime
	</description>
	
	<build>
		<plugins>

			<!--  include src/main/resources/META-INF/services/jakarta.xml.bind.JAXBContext so users can continue to use MOXy v3 if they wish. -->
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
                <version>${version.maven-jar-plugin}</version>
				<configuration>
					<archive>
			            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
			          </archive>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${version.maven-bundle-plugin}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                    	<Manifest-Version>2.0</Manifest-Version>
                        <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Import-Package>
							 <!-- org.eclipse.persistence.internal.jaxb;version="2.7.4",
							 org.eclipse.persistence.internal.jaxb.many;version="2.7.4", -->
							 org.eclipse.persistence.jaxb;version="4.0.0"
							<!--  
							 org.eclipse.persistence.jaxb.attachment;version="2.7.4",
							 org.eclipse.persistence.jaxb.compiler;version="2.7.4",
							 org.eclipse.persistence.jaxb.dynamic;version="2.7.4",
							 org.eclipse.persistence.jaxb.dynamic.metadata;version="2.7.4",
							 org.eclipse.persistence.jaxb.javamodel;version="2.7.4",
							 org.eclipse.persistence.jaxb.javamodel.oxm;version="2.7.4",
							 org.eclipse.persistence.jaxb.javamodel.reflection;version="2.7.4",
							 org.eclipse.persistence.jaxb.metadata;version="2.7.4",
							 org.eclipse.persistence.jaxb.rs;version="2.7.4",
							 org.eclipse.persistence.jaxb.xmlmodel;version="2.7.4"           -->              
                        </Import-Package>
                        <Export-Package>
                            org.docx4j.jaxb.moxy
                        </Export-Package>
                    </instructions>
                </configuration>
				<executions>
					<execution>
						<id>add-meta</id>
						<phase>process-classes</phase><!-- or prepare-package -->
						<goals>
							<goal>manifest</goal>
						</goals>
						<!-- writes to bin/META-INF/MANIFEST.MF, where it is picked up by maven-jar-plugin -->
					</execution>
				</executions>

            </plugin>				
		
 			<!--  mvn versions:display-dependency-updates --> 
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<rulesUri>file:///${project.basedir}/rules.xml</rulesUri>
				</configuration>
			</plugin> 
		
	</plugins>
		</build>

		<dependencies>

			<dependency>
				<groupId>org.docx4j</groupId>
				<artifactId>docx4j-core</artifactId>
				<version>${project.version}</version>
			</dependency>


			<!-- avoid java.lang.module.ResolutionException: Module org.eclipse.persistence.moxy does not read a module that exports com.sun.tools.xjc 
			     https://github.com/eclipse-ee4j/eclipselink/issues/1734
			-->
			<dependency>
			  <groupId>com.sun.xml.bind</groupId>
			  <artifactId>jaxb-xjc</artifactId>
			  <version>4.0.5</version>
			</dependency>

            <!-- order matters! jaxb-xjc must come before persistence.moxy! 
            perhaps because moxy's pom says the following, confusing eclipse?
            
		        <dependency>
		            <groupId>com.sun.xml.bind</groupId>
		            <artifactId>jaxb-xjc</artifactId>
		            <scope>provided</scope>
		            <optional>true</optional>
		        </dependency>
		        
            -->

			<dependency>
				<groupId>org.eclipse.persistence</groupId>
				<artifactId>org.eclipse.persistence.moxy</artifactId>
				<version>4.0.4</version> 
			</dependency>
			<!-- in principle, you can revert to 3.0.1 here, provided you also downgrade jakarta.xml.bind-api to 3.0.1 
			     3.0.1 does also need requires org.eclipse.persistence.core -->

			<dependency>
			    <groupId>jakarta.mail</groupId>
			    <artifactId>jakarta.mail-api</artifactId>
			    <version>2.1.0</version>
			</dependency>
			
			<!-- Module org.eclipse.persistence.asm not found, required by org.eclipse.persistence.core 
				 MOXy 4.0.1 needs this? 
			<dependency>
				<groupId>org.eclipse.persistence</groupId>
				<artifactId>org.eclipse.persistence.asm</artifactId>
				<version>9.6.0</version>
			</dependency>
-->

		</dependencies>

</project>
